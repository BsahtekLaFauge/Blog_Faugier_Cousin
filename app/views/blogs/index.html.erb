<h1>Blogs du moment</h1>
<ul>
	<% @blogs.each do |blog| %>
		<li>
			<%= link_to blog do %>
				<%= blog.title %><br/>
			<% end %>
			<%= blog.abstract %><br/>
			<%= blog.picture %><br/>
			<%= blog.publication_date %>, par <%= blog.author.first_name %> <%= blog.author.last_name %>
		</li>
	<% end %>
</ul>